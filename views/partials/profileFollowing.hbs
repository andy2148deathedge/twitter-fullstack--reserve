<div class="back-arrow-header">
  <a><i class='back-arrow'></i></a>
  <div class="header-text">
    <span class="name">{{user.name}}</span>
    <span class="post-count">{{user.followingCount}} 正在跟隨</span>
  </div>
</div>

<div class="paginator">
  <a class="" href="/users/{{user.id}}/followers">跟隨者</a>
  <a class="active" href="/users/{{user.id}}/followings">正在跟隨</a>
</div>

<div class="followship">

  {{#each followings}}
  <div class="follower">
    <a>
      <img class="thumbnail" src="{{this.avatar}}" alt="{{this.name}} avatar">
    </a>
    <div class="follower-info">
      <a class="follower-user">
        <span class="name ellipsis">{{this.name}}</span>
        <span class="at-name ellipsis">@{{this.account}}</span>
      </a>
      <div class="follower-intro">
        {{this.introduction}}
      </div>
    </div>
    {{#ifCond this.id ../loginUser.id}}
    {{else}}
    {{#if this.isFollowed}}
    <button type="button" class="btn-fill xs btn-followship" data-user-id="{{this.id}}">正在跟隨</button>
    {{else}}
    <button type="button" class="btn-outline xs btn-followship" data-user-id="{{this.id}}">跟隨</button>
    {{/if}}
    {{/ifCond}}
  </div>
  {{/each}}

</div>