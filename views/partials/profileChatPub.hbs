    </div>

    {{!-- 輸入欄位 --}}
    <form class="onlineSendbox">
      <textarea name="message" rows="1" placeholder="輸入訊息..." autofocus required maxlength="500"
        id="textareaAutogrow"></textarea>
      <button type="button"><i class="send" id="send" data-loginuserid="{{loginUser.id}}"
          data-loginusername="{{loginUser.name}}" data-loginuseravatar="{{loginUser.avatar}}"></i></button>
    </form>

  </div>
</div>

